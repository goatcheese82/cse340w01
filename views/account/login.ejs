<link rel="stylesheet" href="/css/account/login.css">
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="loginForm">
  <form>
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email">
    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password">
    <input type="submit" value="Login">
  </form>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>